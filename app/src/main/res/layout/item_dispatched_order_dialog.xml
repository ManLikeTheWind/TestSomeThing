<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dispatched_work_order_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/dispatched_work_order_ll_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dispatched_work_order_no"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="work_order_no"
                android:textColor="@color/text_color_black"/>

            <TextView
                android:id="@+id/dispatched_work_order_ne_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="work_order_ne_id"
                android:textColor="@color/text_color_black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dispatched_work_order_ll_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/finish_time_layout"
                android:layout_width="match_parent"
                android:layout_height="25dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dispatched_ssd_id_type"
                    android:text="ssd_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dispatched_work_order_sla"
                    android:text="5555555"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/text_color_black" />
            </LinearLayout>

            <TextView
                android:id="@+id/dispatched_work_order_station_name"
                android:text="order_station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_color_black" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/dispatched_work_order_ne_address"
        android:text="dispatched_work_order_ne_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:textColor="@color/text_color_black" />

</LinearLayout>